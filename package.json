{
  "name": "chess-api",
  "version": "1.0.1",
  "description": "API for remote chess games",
  "main": "build/index.js",
  "scripts": {
    "start": "nodemon build serve",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc-watch --onSuccess tsc-alias",
    "lint": "eslint . --ext .ts",
    "test": "echo jest",
    "generate-openapi-schemas": "node build generate-openapi-schemas",
    "generate-openapi-bundle": "npm run generate-openapi-schemas && swagger-cli bundle --t yaml --dereference --o api-bundle.yaml api.yaml"
  },
  "keywords": [
    "chess"
  ],
  "author": "pascal-brauns",
  "license": "ISC",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@openapi-contrib/json-schema-to-openapi-schema": "^2.1.0",
    "chess-processor": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.2",
    "mongodb": "^4.2.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "socket.io": "^4.4.0"
  },
  "devDependencies": {
    "@jest/types": "^27.2.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/morgan": "^1.9.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^7.32.0",
    "jest": "^27.3.1",
    "jest-config": "^27.3.1",
    "np": "^7.6.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsc-alias": "1.3.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4"
  }
}
